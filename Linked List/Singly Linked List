//Write a Java program to implement Singly Linked List and perform basic operations.

import java.util.Scanner;

class Node {
    int data;
    Node next;

    Node(int data) {
        this.data = data;
        this.next = null;
    }
}

public class SinglyLinkedList {

    Node head = null;

    // insert at end
    void insert(int item) {

        Node newNode = new Node(item);

        if (head == null) {
            head = newNode;
            System.out.println("Inserted: " + item);
            return;
        }

        Node temp = head;
        while (temp.next != null) {
            temp = temp.next;
        }

        temp.next = newNode;
        System.out.println("Inserted: " + item);
    }

    // delete from beginning
    void delete() {

        if (head == null) {
            System.out.println("List is empty");
            return;
        }

        System.out.println("Deleted: " + head.data);
        head = head.next;
    }

    // display list
    void display() {

        if (head == null) {
            System.out.println("List is empty");
            return;
        }

        System.out.print("Singly Linked List: ");
        Node temp = head;

        while (temp != null) {
            System.out.print(temp.data + " ");
            temp = temp.next;
        }
        System.out.println();
    }

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        SinglyLinkedList sll = new SinglyLinkedList();

        int choice, item;

        do {
            System.out.println("\n1. Insert");
            System.out.println("2. Delete");
            System.out.println("3. Display");
            System.out.println("4. Exit");
            System.out.print("Enter choice: ");
            choice = sc.nextInt();

            switch (choice) {
                case 1:
                    System.out.print("Enter element: ");
                    item = sc.nextInt();
                    sll.insert(item);
                    break;

                case 2:
                    sll.delete();
                    break;

                case 3:
                    sll.display();
                    break;

                case 4:
                    System.out.println("Exit");
                    break;

                default:
                    System.out.println("Invalid choice");
            }

        } while (choice != 4);

        sc.close();
    }
}
//Output:

1. Insert
2. Delete
3. Display
4. Exit
Enter choice: 1
Enter element: 10
Inserted: 10

Enter choice: 1
Enter element: 20
Inserted: 20

Enter choice: 1
Enter element: 30
Inserted: 30

Enter choice: 3
Singly Linked List: 10 20 30

Enter choice: 2
Deleted: 10

Enter choice: 3
Singly Linked List: 20 30


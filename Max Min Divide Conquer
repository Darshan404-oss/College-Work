//Write a java program to find Maximum and Minimum using divide and conquer approach.

public class MaxMinDivideConquer {

    // Pair class to return both max and min
    static class Pair {
        int max;
        int min;
    }

    // Function to find maximum and minimum using divide and conquer
    static Pair getMinMax(int[] arr, int low, int high) {
        Pair result = new Pair();
        Pair left = new Pair();
        Pair right = new Pair();

        // If there is only one element
        if (low == high) {
            result.max = arr[low];
            result.min = arr[low];
            return result;
        }

        // If there are two elements
        if (high == low + 1) {
            if (arr[low] > arr[high]) {
                result.max = arr[low];
                result.min = arr[high];
            } else {
                result.max = arr[high];
                result.min = arr[low];
            }
            return result;
        }

        // If there are more than two elements
        int mid = (low + high) / 2;
        left = getMinMax(arr, low, mid);
        right = getMinMax(arr, mid + 1, high);

        // Compare results of left and right halves
        result.max = Math.max(left.max, right.max);
        result.min = Math.min(left.min, right.min);

        return result;
    }

    public static void main(String[] args) {
        int[] arr = {100, 20, 5, 75, 150, 10};
        int n = arr.length;

        Pair result = getMinMax(arr, 0, n - 1);

        System.out.println("Maximum element is: " + result.max);
        System.out.println("Minimum element is: " + result.min);
    }
}

//Output:
Maximum element is: 150
Minimum element is: 5
